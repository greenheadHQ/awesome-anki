# Gemini API Key
GEMINI_API_KEY=your_gemini_api_key_here

# AnkiConnect Configuration (optional, defaults shown)
ANKI_CONNECT_URL=http://localhost:8765
ANKI_CONNECT_VERSION=6

# Target Deck (optional)
TARGET_DECK=[책] 이것이 취업을 위한 컴퓨터 과학이다

# API Authentication (required for server/web requests)
# - Use a long random string
# - VITE_API_KEY must match ANKI_SPLITTER_API_KEY
# - NOTE: VITE_API_KEY is bundled into frontend code and is not a secret.
#   It helps block cross-origin calls from other sites, not user-level auth.
ANKI_SPLITTER_API_KEY=change-this-to-a-long-random-secret
VITE_API_KEY=change-this-to-a-long-random-secret

# Privacy Mode
# - standard: 외부 전송 허용, 마스킹 기본 비활성
# - balanced: 외부 전송 허용, 마스킹 + 길이 제한 기본 활성
# - strict: split/validation/embedding 외부 전송 차단
ANKI_SPLITTER_PRIVACY_MASK_SENSITIVE=true
ANKI_SPLITTER_PRIVACY_MODE=balanced

# Per-feature limits (characters sent to external AI)
ANKI_SPLITTER_PRIVACY_EMBEDDING_MAX_CHARS=2000
ANKI_SPLITTER_PRIVACY_SPLIT_MAX_CHARS=6000
ANKI_SPLITTER_PRIVACY_VALIDATION_MAX_CHARS=4000
